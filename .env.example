# Application
APP_NAME=AutoBug
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql+asyncpg://autobug:password@localhost:5432/autobug_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Prefect
PREFECT_API_URL=http://localhost:4200/api
PREFECT_LOGGING_LEVEL=INFO

# DigitalOcean (for Axiom Fleet)
DO_API_TOKEN=your_digitalocean_token_here
DO_REGION=nyc3
DO_SIZE=s-2vcpu-4gb

# Platform APIs
HACKERONE_API_TOKEN=your_h1_token_here
BUGCROWD_API_TOKEN=your_bc_token_here

# Alerting
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...
PUSHOVER_USER_KEY=your_pushover_user_key
PUSHOVER_APP_TOKEN=your_pushover_app_token
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# Alert Configuration
ALERT_MIN_SEVERITY=high
ALERT_CRITICAL_CHANNEL=discord
ALERT_BATCH_WINDOW=300
ENABLE_DAILY_SUMMARY=true
DAILY_SUMMARY_TIME=09:00
ENABLE_WEEKLY_DIGEST=true
WEEKLY_DIGEST_DAY=monday

# Interactsh (for OOB detection)
INTERACTSH_SERVER_URL=https://interact.sh
INTERACTSH_TOKEN=

# Scanning Configuration
MAX_CONCURRENT_SCANS=5
SCAN_TIMEOUT=3600
NUCLEI_RATE_LIMIT=150
HTTPX_THREADS=50

# API Security (Optional - auto-generated if not provided)
# Generate a secure key: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY=

# Fleet Management
AXIOM_FLEET_SIZE=10
AXIOM_MAX_FLEET_SIZE=50
AUTO_SCALE_ENABLED=true
